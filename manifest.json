{
    "manifest_version": 3,
    "name": "Bookmark AI Search",
    "version": "1.0",
    "description": "Search and analyze bookmarks using AI.",
    "permissions": [
      "bookmarks",
      "tabs",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "https://gemini.google.com/*",
      "https://chat.openai.com/*",
      "https://grok.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://gemini.google.com/*",
          "https://chat.openai.com/*",
          "https://grok.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_end",
        "all_frames": true
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "128": "icon.png"
    }
  }